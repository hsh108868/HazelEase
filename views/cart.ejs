                        <button type="button" class="quantity-right-plus btn btn-sm btn-outline-secondary btn-number" data-type="plus" data-field="">
                          <i class="fas fa-plus"></i>
                        </button>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
