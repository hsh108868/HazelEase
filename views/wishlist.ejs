<%- include("partials/header"); -%>
  <!-- Custom styles -->
  <link href="css/wishlist.css" rel="stylesheet">
</head>

<body>
  <%- include("partials/navbar"); -%>

  <div class="container">
    <div class="py-5 text-center">
      <h2><i class="fas fa-heart fa-lg"></i> <%= user_id ? user_id : "고객"; %>님의 위시리스트</h2>
    </div>

    <div class="row">
        <!-- 1st Column -->
        <div class="col-md-6">
            <!-- 상품 1 -->
            <% for(var i = 0; i < data.length; i++) { if (i % 2 == 0) { %>
                <div class="card p-3 mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="images/product-default.jpg" alt="product-img" width="110%"/>
                        </div>
                        <div class="col-sm-8">
                            <h5 class="card-title">
                                <%= data[i].product %>
                                <br><small>종류</small>
                            </h5>
                            <p class="card-text mb-2"><strong><%= formatNum(data[i].price) %> 원</strong></p>
                            <p>
                   <span style="color: #fbd46d;">
                       <% for (var j = 0; j < data[i].rating; j++) { %>
                           <i class="fas fa-star"></i>
                       <% } %>
                   </span>(23)
                            </p>
                            <button type="button" onClick="location.href = '/wishlist/delete/<%= data[i].wishlist_id %>'" class="btn btn-sm btn-outline-secondary mr-2"><i class="fas fa-trash"></i></button>
                          <a href="#" class="btn btn-sm btn-outline-secondary mr-2">쇼핑카트 담기</a>
                        </div>
                    </div>
                </div>
            <% } } %>
        </div>

        <div class="col-md-6">
            <!-- 상품 1 -->
            <% for(var i = 0; i < data.length; i++) { if (i % 2 != 0) { %>
                <div class="card p-3 mb-3">
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="images/product-default.jpg" alt="product-img" width="110%"/>
                        </div>
                        <div class="col-sm-8">
                            <h5 class="card-title">
                                <%= data[i].product %>
                                <br><small>종류</small>
                            </h5>
                            <p class="card-text mb-2"><strong><%= formatNum(data[i].price) %> 원</strong></p>
                            <p>
                   <span style="color: #fbd46d;">
                       <% for (var j = 0; j < data[i].rating; j++) { %>
                           <i class="fas fa-star"></i>
                       <% } %>
                   </span>(23)
                            </p>
                            <button type="button" onClick="location.href = '/wishlist/delete/<%= data[i].wishlist_id %>'" class="btn btn-sm btn-outline-secondary mr-2"><i class="fas fa-trash"></i></button>
                          <a href="#" class="btn btn-sm btn-outline-secondary mr-2">쇼핑카트 담기</a>
                        </div>
                    </div>
                </div>
            <% } } %>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="js/cart.js"></script>
<!-- FOOTER -->
<%- include("partials/copyright"); -%>
<%- include("partials/footer"); -%>
