<%-include("partials/header");-%>
<!-- Custom styles -->
<link href="css/cart.css" rel="stylesheet">
</head>

<body>
  <%- include("partials/navbar"); -%>
  <div class="container py-4">
    <div class="my-4 text-center">
      <h1><i class="fas fa-bell"></i> 알림</h1>
    </div>

    <div class="row">
      <div class="col-md-12 mt-4">
        <% if(data.length === 0) { %>
        <div class="alert alert-light" role="alert">
          최신 구매된 상품이 없습니다.
        </div>
        <% } else {
         var i = 0, deadlineDate;
         for (let p = 0; p < pendingOrder.length; p++) {
           if (p == 0 || (p != 0 && pendingOrder[p].trans_id != pendingOrder[p-1].trans_id)) {
             for (let t = 0; t < transaction.length; t++) {
               if (pendingOrder[p].trans_id == transaction[t].trans_id) { %>
                <h4 class="mb-3 <%= p != 0 ? 'mt-5' : '' %>">상품이 구매되었습니다. (<a href="/purchase-invoice/<%= pendingOrder[p].trans_id %>">Ref No. <%= pendingOrder[p].trans_id %></a> - <%= transaction[t].date.getFullYear() + "/" + (transaction[t].date.getMonth() + 1) + "/" + transaction[t].date.getDate() %>)</h4>
                <% tempDate = new Date(transaction[t].date.getTime() + (7*24*60*60*1000));
                   deadlineDate = tempDate.getFullYear() + "-" + (tempDate.getMonth() + 1) + "-" + tempDate.getDate();
               }
             }
           }
         %>
        <div class="card mb-4">
          <div class="card-header clearfix">
            <i class="fas fa-store-alt mr-1"></i> 판매자: <strong><%= pendingOrder[p].sellername %></strong>
            <div class="float-right">
              <a href="/purchase-invoice/<%= pendingOrder[p].trans_id %>">Order No. <%= pendingOrder[p].order_id %></a>
            </div>
          </div>
          <div class="row">
            <!-- 상품 -->
            <% for (let q = 0; q < pendingOrder[p].count; q++, i++) { %>
            <div class="col-md-6">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <% var isExist = false; %>
                    <% for(let j = 0; j < images.length; j++) { %>
                    <% if (images[j].product_id == data[i].product_id) { %>
                    <a href="/product/<%= data[i].product_id %>"><img class="border rounded" src="uploads/<%= images[j].file %>" alt="product-image" width="110%" /></a>
                    <% isExist = true; break; %>
                    <% } %>
                    <% } %>
                    <% if(!isExist) { %>
                    <img class="border rounded" src="images/product-default.jpg" alt="product-image" width="110%" />
                    <% } %>
                  </div>
                  <div class="col-sm-9">
                    <h5 class="card-title">
                      <a href="/product/<%= data[i].product_id %>"><%= data[i].product %></a>
                      <br><small class="text-secondary"><%= data[i].type != "None" ? data[i].type : '' %> (Qty: <span class=""><%= data[i].quantity %></span>)</small>
                    </h5>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
          <div class="clear-fix my-2 mx-1">
            <div class="float-left">
              <button type="button" class="btn btn-link mx-2">취소</button>
            </div>
            <div class="float-right">
              <small class="mr-3 text-danger">수령법 선택 <%= deadlineDate %>까지</small>
              <button type="button" class="btn btn-outline-secondary mb-1 mr-2" onclick="location.href='/my-notification/delivery/<%= pendingOrder[p].order_id %>'">배송</button>
              <button type="button" class="btn btn-outline-secondary mb-1 mr-2" onclick="location.href='/my-notification/pickup/<%= pendingOrder[p].order_id %>'">픽업</button>
              <button type="button" class="btn btn-outline-secondary mb-1 mr-3" onclick="location.href='/my-notification/direct/<%= pendingOrder[p].order_id %>'">바로 가져가기</button>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
    </div>
  </div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
